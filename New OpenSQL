************************ New Open SQL
SELECT FROM sflight
    FIELDS carrid,
            connid,
            fldate
     WHERE carrid = 'AA'
     INTO TABLE @DATA(lt_data)
     UP TO 10 ROWS.
     

************************ Checking for record in the table using Literals
select SINGLE 'X'
FROM vbak
into @DATA(lv_exist)
WHERE vkorg = ''.
